<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.github.alex1304</groupId>
	<artifactId>ultimategdbot</artifactId>
	<version>3.1.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>ultimategdbot</name>
	<url>http://maven.apache.org</url>

	<description>An awesome Discord bot for Geometry Dash players!</description>

	<licenses>
		<license>
			<name>MIT License</name>
			<url>http://www.opensource.org/licenses/mit-license.php</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>Alex1304</name>
			<email>mirandaa1304@gmail.com</email>
		</developer>
	</developers>

	<scm>
		<url>https://github.com/Alex1304/ultimategdbot/tree/master</url>
		<connection>scm:git:git://github.com/Alex1304/ultimategdbot.git</connection>
		<developerConnection>scm:git:ssh://git@github.com/Alex1304/ultimategdbot.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.8.0</version>
					<configuration>
						<release>${java.version}</release>
						<source>${java.version}</source>
						<target>${java.version}</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>2.5.3</version>
					<configuration>
						<tagNameFormat>v@{project.version}</tagNameFormat>
						<autoVersionSubmodules>true</autoVersionSubmodules>
						<goals>deploy</goals>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<properties>
		<java.version>11</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<hibernate.connection.provider_class>org.hibernate.hikaricp.internal.HikariCPConnectionProvider</hibernate.connection.provider_class>
		<hibernate.hikari.minimumIdle>5</hibernate.hikari.minimumIdle>
		<hibernate.hikari.maximumPoolSize>10</hibernate.hikari.maximumPoolSize>
		<hibernate.hikari.idleTimeout>30000</hibernate.hikari.idleTimeout>
		<hibernate.hikari.dataSourceClassName>com.mysql.jdbc.jdbc2.optional.MysqlDataSource</hibernate.hikari.dataSourceClassName>
		<hibernate.hikari.dataSource.url>jdbc:mysql://localhost/ultimategdbot</hibernate.hikari.dataSource.url>
		<hibernate.hikari.dataSource.user>root</hibernate.hikari.dataSource.user>
		<hibernate.hikari.dataSource.password>root</hibernate.hikari.dataSource.password>

		<!-- The properties below must be given as arguments on build (unless it's 
			prefilled with a value) -->
		<ultimategdbot.name>UltimateGDBot</ultimategdbot.name>
		<ultimategdbot.client.id />
		<ultimategdbot.client.token />
		<ultimategdbot.hierarchy.owner_id />
		<ultimategdbot.hierarchy.official_guild_id />
		<ultimategdbot.hierarchy.moderator_role_id />
		<ultimategdbot.gd_client.url>default</ultimategdbot.gd_client.url>
		<ultimategdbot.gd_client.id />
		<ultimategdbot.gd_client.password />
		<ultimategdbot.prefix.full />
		<ultimategdbot.prefix.canonical />
		<ultimategdbot.release.channel />
		<ultimategdbot.misc.emoji_guild_id.1 />
		<ultimategdbot.misc.emoji_guild_id.2 />
	</properties>

	<modules>
		<module>ultimategdbot-core</module>
		<module>ultimategdbot-command-api</module>
		<module>ultimategdbot-database</module>
		<module>ultimategdbot-utils</module>
	</modules>

	<repositories>
		<repository>
			<id>jitpack.io</id>
			<url>https://jitpack.io</url>
		</repository>
	</repositories>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.github.alex1304</groupId>
				<artifactId>ultimategdbot-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.github.alex1304</groupId>
				<artifactId>ultimategdbot-command-api</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.github.alex1304</groupId>
				<artifactId>ultimategdbot-database</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.github.alex1304</groupId>
				<artifactId>ultimategdbot-utils</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.12</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-simple</artifactId>
				<version>1.7.25</version>
			</dependency>
			<dependency>
				<groupId>com.discord4j.discord4j</groupId>
				<artifactId>discord4j-core</artifactId>
				<version>b27dd7d</version>
			</dependency>
			<dependency>
				<groupId>org.xeustechnologies</groupId>
				<artifactId>jcl-core</artifactId>
				<version>2.8</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>
